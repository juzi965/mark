<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".InputActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <EditText
                android:id="@+id/acconut_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="@dimen/input_margin_start"
                android:layout_marginEnd="@dimen/input_margin_end"
                android:background="@drawable/edit_text_border_select"
                android:hint="@string/account_name_hint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/input_padding_start"
                android:paddingEnd="@dimen/input_padding_end"
                android:textSize="@dimen/input_font_size"
                app:layout_constraintBottom_toBottomOf="@+id/acconut_name_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/acconut_name_img"
                app:layout_constraintTop_toTopOf="@+id/acconut_name_img" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="@dimen/input_margin_start"
                android:layout_marginEnd="@dimen/input_margin_end"
                android:background="@drawable/edit_text_border_select"
                android:hint="@string/user_name_hint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/input_padding_start"
                android:paddingEnd="@dimen/input_padding_end"
                android:textSize="@dimen/input_font_size"
                app:layout_constraintBottom_toBottomOf="@+id/user_name_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/user_name_img"
                app:layout_constraintTop_toTopOf="@+id/user_name_img" />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="@dimen/input_margin_start"
                android:layout_marginEnd="@dimen/input_margin_end"
                android:background="@drawable/edit_text_border_select"
                android:hint="@string/password_hint"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="@dimen/input_padding_start"
                android:paddingEnd="@dimen/input_padding_end"
                android:textSize="@dimen/input_font_size"
                app:layout_constraintBottom_toBottomOf="@+id/password_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/password_img"
                app:layout_constraintTop_toTopOf="@+id/password_img" />

            <EditText
                android:id="@+id/note"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginStart="@dimen/input_margin_start"
                android:layout_marginEnd="@dimen/input_margin_end"
                android:background="@drawable/edit_text_border_select"
                android:hint="@string/note_hint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/input_padding_start"
                android:paddingEnd="@dimen/input_padding_end"
                android:textSize="@dimen/input_font_size"
                app:layout_constraintBottom_toBottomOf="@+id/note_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/note_img"
                app:layout_constraintTop_toTopOf="@+id/note_img" />

            <ImageView
                android:id="@+id/acconut_name_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_person_add_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/account_name" />

            <ImageView
                android:id="@+id/user_name_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_person_outline_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/acconut_name_img"
                app:layout_constraintTop_toBottomOf="@+id/acconut_name_img"
                android:contentDescription="@string/user_name"/>

            <ImageView
                android:id="@+id/password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_lock_outline_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/user_name_img"
                app:layout_constraintTop_toBottomOf="@+id/user_name_img"
                android:contentDescription="@string/password"/>

            <ImageView
                android:id="@+id/note_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/ic_note_black_24dp"
                app:layout_constraintStart_toStartOf="@+id/password_img"
                app:layout_constraintTop_toBottomOf="@+id/password_img"
                android:contentDescription="@string/note"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/button_background"
        android:text="@string/save_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>